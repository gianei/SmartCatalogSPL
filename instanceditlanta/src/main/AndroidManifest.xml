<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glsebastiany.smartcatalogspl.instanceditlanta">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.di.AndroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".data.imagefetching.ImageFetcherIntentService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".presentation.ui.splash.SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.ui.main.MainActivity_">
            <meta-data android:name="android.app.default_searchable"
                android:value=".presentation.ui.search.SearchActivity_" />
        </activity>

        <activity
            android:name=".presentation.ui.tabbedgallery.TabbedGalleryActivity_"
            android:parentActivityName=".presentation.ui.main.MainActivity_" />

        <activity android:name=".presentation.ui.login.LoginActivity_" />

        <activity
            android:name=".data.preferences.ActivityPreferences_"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".presentation.ui.main.MainActivity_" />

        <activity android:name=".presentation.ui.itempager.ItemPagerActivity_" />

        <activity
            android:name=".presentation.ui.search.SearchActivity_"
            android:parentActivityName=".presentation.ui.main.MainActivity_" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>