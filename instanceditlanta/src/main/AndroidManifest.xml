<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glsebastiany.smartcatalogspl.instanceditlanta">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.glsebastiany.smartcatalogspl.instanceditlanta.SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.glsebastiany.smartcatalogspl.core.presentation.ui.homescreen.categorygroups.MainActivityCategoryGroups">
            <meta-data android:name="android.app.default_searchable"
                android:value=".presentation.ui.search.SearchActivity_" />
        </activity>

        <activity android:name="com.glsebastiany.smartcatalogspl.core.presentation.ui.tabbedgallery.TabbedGalleryActivityBase_">
            <meta-data android:name="android.app.default_searchable"
                android:value=".presentation.ui.search.SearchActivity_" />
        </activity>

        <activity android:name="com.glsebastiany.smartcatalogspl.core.presentation.ui.login.LoginActivity_" />

        <activity android:name="com.glsebastiany.smartcatalogspl.core.presentation.ui.itempager.ItemPagerActivity_" />

        <activity
            android:name="com.glsebastiany.smartcatalogspl.core.presentation.ui.search.SearchActivity_">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

    </application>

</manifest>
