    package="com.glsebastiany.smartcatalogspl">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.AndroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.ActivityMain_">

        </activity>

        <activity android:name=".ui.tabbedgallery.ActivityGallery_">

        </activity>

        <activity android:name=".ui.login.LoginActivity_" >

        </activity>
    </application>

</manifest>