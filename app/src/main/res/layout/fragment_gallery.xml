<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="com.glsebastiany.smartcatalogspl.ui.gallery.GalleryFragment"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gallery_tabs"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            >
            <!--android:background="@color/theme_primary"-->
            <!--android:divider="?attr/actionBarDivider"-->
            <!--android:showDividers="middle"-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:text="Drawer"
                android:textAllCaps="true"
                android:textStyle="bold"

                android:id="@+id/drawerTriggerView"
                android:padding="15dp"
                android:clickable="true" />

            <android.support.design.widget.TabLayout
                android:id="@+id/slidingTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"

                app:tabSelectedTextColor="@android:color/white"
                app:tabIndicatorColor="@android:color/white"/>

        </LinearLayout>

        <com.glsebastiany.smartcatalogspl.presentation.widget.MyDrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    >
                </android.support.v4.view.ViewPager>

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- The navigation drawer -->
            <ListView android:id="@+id/left_drawer"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:choiceMode="none"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="?android:colorBackground"

                android:paddingBottom="?attr/actionBarSize"/> <!--workaround because of variant height with QuickReturn-->


        </com.glsebastiany.smartcatalogspl.presentation.widget.MyDrawerLayout>
</LinearLayout>

